<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_color">
    <include layout="@layout/common_title"
        android:id="@+id/title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/app_backgrount_color"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal"
                    android:background="@color/white_color"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fifteen"
                        android:text="活动标题:"
                        android:textColor="@color/black_color"
                        android:layout_marginLeft="15dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fifteen"
                        android:text="活动"
                        android:visibility="invisible"
                        android:textColor="@color/black_color"
                        />
                    <EditText
                        android:id="@+id/et_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_weight="0"
                        android:background="@null"
                        android:hint="请输入"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:nextFocusForward="@+id/et_mobile"
                        android:text="家庭装修量房招标"
                        android:textSize="@dimen/fifteen"
                        android:textColor="@color/black_color"
                        android:maxLength="15"
                        android:textColorHint="@color/dark" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white_color"
                    android:layout_marginTop="1dp"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fifteen"
                        android:textColor="@color/black_color"
                        android:text="资源类型:"
                        android:layout_marginLeft="15dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fifteen"
                        android:text="活动"
                        android:visibility="invisible"
                        android:textColor="@color/black_color"
                        />
                    <TextView
                        android:layout_weight="0"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/fifteen"
                        android:singleLine="true"
                        android:text="资源换钱"
                        android:textColorHint="@color/dark"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white_color"
                    android:layout_marginTop="1dp"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/fifteen"
                        android:text="活动开始时间:"
                        android:layout_marginLeft="15dp"/>

                    <TextView
                        android:id="@+id/tv_start_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/fifteen"
                        android:textColor="@color/black_color"
                        android:hint="年-月-日"
                        android:textColorHint="@color/dark" />
                    <ImageView
                        android:layout_weight="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/more_b"
                        android:layout_marginRight="15dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white_color"
                    android:layout_marginTop="1dp"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fifteen"
                        android:textColor="@color/black_color"
                        android:text="活动结束时间:"
                        android:layout_marginLeft="15dp"/>

                    <TextView
                        android:id="@+id/tv_end_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:textSize="@dimen/fifteen"
                        android:textColor="@color/black_color"
                        android:hint="年-月-日"
                        android:textColorHint="@color/dark" />
                    <ImageView
                        android:layout_weight="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/more_b"
                        android:layout_marginRight="15dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white_color"
                    android:layout_marginTop="1dp"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fifteen"
                        android:text="活动范围:"
                        android:textColor="@color/black_color"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fifteen"
                        android:text="活动"
                        android:visibility="invisible"
                        android:textColor="@color/black_color"
                        />


                    <CheckBox
                        android:id="@+id/rb_city_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="全国"
                        android:textColor="@color/black_color"
                        android:layout_marginRight="20dp"/>

                    <CheckBox
                        android:id="@+id/rb_city_index"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_color"
                        android:text="指定城市" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white_color"
                    android:layout_marginTop="1dp"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fifteen"
                        android:text="指定城市:"
                        android:textColor="@color/black_color"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fifteen"
                        android:text="活动"
                        android:visibility="invisible"
                        android:textColor="@color/black_color"
                        />
                    <TextView
                        android:id="@+id/tv_city"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:textSize="@dimen/fifteen"
                        android:textColor="@color/black_color"
                        android:hint="请选择"
                        android:textColorHint="@color/dark"/>
                    <ImageView
                        android:layout_weight="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/more_b"
                        android:layout_marginRight="15dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white_color"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fifteen"
                        android:textColor="@color/black_color"
                        android:text="联系方式:"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fifteen"
                        android:text="活动"
                        android:visibility="invisible"
                        android:textColor="@color/black_color"
                        />
                    <EditText
                        android:id="@+id/et_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:textColorHint="@color/dark"
                        android:hint="请输入"
                        android:textSize="@dimen/fifteen"
                        android:textColor="@color/black_color"
                        android:maxLength="11"
                        android:inputType="number"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:nextFocusForward="@+id/et_address"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white_color"
                    android:layout_marginTop="1dp"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fifteen"
                        android:textColor="@color/black_color"
                        android:text="所在区域:"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fifteen"
                        android:text="活动"
                        android:visibility="invisible"
                        android:textColor="@color/black_color"
                        />

                    <TextView
                        android:id="@+id/tv_city_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:hint="请选择"
                        android:textColorHint="@color/dark"
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/fifteen" />
                    <ImageView
                        android:layout_weight="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/more_b"
                        android:layout_marginRight="15dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white_color"
                    android:layout_marginTop="1dp"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fifteen"
                        android:text="房屋类型:"
                        android:textColor="@color/black_color"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fifteen"
                        android:text="活动"
                        android:visibility="invisible"
                        android:textColor="@color/black_color"
                        />
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="新房"
                        android:textColor="@color/black_color"
                        android:layout_marginRight="20dp"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_color"
                        android:text="二手房" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white_color"
                    android:layout_marginTop="1dp"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fifteen"
                        android:textColor="@color/black_color"
                        android:text="楼盘小区:"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fifteen"
                        android:text="活动"
                        android:visibility="invisible"
                        android:textColor="@color/black_color"
                        />
                    <EditText
                        android:id="@+id/et_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="请输入"
                        android:textColorHint="@color/dark"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:nextFocusForward="@+id/et_size"
                        android:textSize="@dimen/fifteen"
                        android:textColor="@color/black_color"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white_color"
                    android:layout_marginTop="1dp"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fifteen"
                        android:text="参与商家:"
                        android:textColor="@color/black_color"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fifteen"
                        android:text="活动"
                        android:visibility="invisible"
                        android:textColor="@color/black_color"
                        />
                    <TextView
                        android:id="@+id/tv_join_count"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:textSize="@dimen/fifteen"
                        android:textColor="@color/black_color"
                        android:textColorHint="@color/dark"
                        android:hint="不限"
                        android:text=""/>
                    <TextView
                        android:layout_weight="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:textSize="@dimen/fifteen"
                        android:textColor="@color/black_color"
                        android:text="家"/>
                    <ImageView
                        android:layout_weight="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/more_b"
                        android:layout_marginRight="15dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white_color"
                    android:layout_marginTop="1dp"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fifteen"
                        android:textColor="@color/black_color"
                        android:text="选择户型:"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fifteen"
                        android:text="活动"
                        android:visibility="invisible"
                        android:textColor="@color/black_color"
                        />
                    <TextView
                        android:id="@+id/tv_house_type"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:textSize="@dimen/fifteen"
                        android:textColor="@color/black_color"
                        android:hint="请选择"
                        android:textColorHint="@color/dark"/>
                    <ImageView
                        android:layout_weight="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/more_b"
                        android:layout_marginRight="15dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white_color"
                    android:layout_marginTop="1dp"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fifteen"
                        android:text="设计风格:"
                        android:textColor="@color/black_color"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fifteen"
                        android:text="活动"
                        android:visibility="invisible"
                        android:textColor="@color/black_color"
                        />
                    <TextView
                        android:id="@+id/tv_style"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:textSize="@dimen/fifteen"
                        android:textColor="@color/black_color"
                        android:hint="请选择"
                        android:textColorHint="@color/dark"/>
                    <ImageView
                        android:layout_weight="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/more_b"
                        android:layout_marginRight="15dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white_color"
                    android:layout_marginTop="1dp"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fifteen"
                        android:text="建筑面积:"
                        android:textColor="@color/black_color"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fifteen"
                        android:text="活动"
                        android:visibility="invisible"
                        android:textColor="@color/black_color"
                        />
                    <EditText
                        android:id="@+id/et_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:textSize="@dimen/fifteen"
                        android:textColor="@color/black_color"
                        android:hint="0"
                        android:inputType="number"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:nextFocusForward="@+id/et_budget"
                        android:maxLength="7"
                        android:textColorHint="@color/dark" />
                    <TextView
                        android:layout_weight="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="平方"
                        android:textSize="@dimen/fifteen"
                        android:textColor="@color/black_color"
                        android:layout_marginRight="15dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white_color"
                    android:layout_marginTop="1dp"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fifteen"
                        android:text="装修预算:"
                        android:textColor="@color/black_color"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fifteen"
                        android:text="活动"
                        android:visibility="invisible"
                        android:textColor="@color/black_color"
                        />
                    <EditText
                        android:id="@+id/et_budget"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:background="@null"
                        android:textSize="@dimen/fifteen"
                        android:textColor="@color/black_color"
                        android:hint="0"
                        android:imeOptions="actionNext"
                        android:nextFocusForward="@+id/et_amount"
                        android:inputType="number"
                        android:maxLength="8"
                        android:textColorHint="@color/dark" />
                    <TextView
                        android:layout_weight="0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="万元"
                        android:textSize="@dimen/fifteen"
                        android:textColor="@color/black_color"
                        android:layout_marginRight="15dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white_color"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/fifteen"
                            android:textColor="@color/black_color"
                            android:text="保证金"
                            android:layout_marginLeft="15dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/fifteen"
                            android:textColor="@color/dark"
                            android:text="(发布人支付到平台)"
                            android:layout_marginLeft="15dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/fifteen"
                            android:textColor="@color/black_color"
                            android:text=":"/>
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="10dp"
                            android:textSize="@dimen/fifteen"
                            android:text="1"
                            android:textColor="@color/red"/>
                        <TextView
                            android:layout_weight="0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_color"
                            android:text="元"
                            android:layout_marginRight="15dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white_color"
                    android:layout_marginTop="1dp"
                    android:gravity="center_vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/fifteen"
                            android:text="可获得装修公司提供量房金:"
