                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_close"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@color/white_color"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textColor="@color/white_color"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textSize="@dimen/fifteen"
                        android:text="关闭活动"
                        android:gravity="center"
                        android:background="@drawable/shape_rectangle_btn_yellow"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_receive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@color/white_color"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textColor="@color/white_color"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textSize="@dimen/fifteen"
                        android:text="领取量房金"
                        android:gravity="center"
                        android:background="@drawable/shape_rectangle_btn_red"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_settlement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@color/white_color"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textColor="@color/white_color"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textSize="@dimen/fifteen"
                        android:text="待结算"
                        android:gravity="center"
                        android:background="@drawable/shape_rectangle_btn_dark"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:background="@color/white_color"

                    android:paddingBottom="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:textColor="@color/white_color"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textSize="@dimen/fifteen"
                        android:text="客服电话"
                        android:gravity="center"
                        android:background="@drawable/shape_rectangle_phone_red"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textColor="@color/red"
                        android:textSize="@dimen/fifteen"
                        android:text="021-64183359"
                        android:gravity="center"
                        android:background="@drawable/shape_rectangle_phone_white"/>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_weight="0"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_share"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/share_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分享"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/eleven"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_comment"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/comment_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评论"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/eleven"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>

        </LinearLayout>

        <com.apicloud.moduleDemo.view.ErrorLayout
            android:id="@+id/error_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />
    </RelativeLayout>

